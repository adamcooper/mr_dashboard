!!! 5
%html(lang="en")
  %head
    %title= MrDashboard.settings['title']
    %script{:src => '/lib/jquery-1.7.min.js'}
    %script{:src => '/lib/bootstrap/js/bootstrap-dropdown.js'}
    %script{:src => '/lib/bootstrap/js/bootstrap-alerts.js'}
    %script{:src => 'application.js'}
    %link{:href => 'lib/bootstrap/bootstrap.min.css', :rel => 'stylesheet', :type => "text/css"}
    %link{:href => 'application.css', :rel => 'stylesheet', :type => "text/css"}

  %body
    .topbar
      .fill
        .container
          %h3
            %a(href="#")=MrDashboard.settings["title"]
          %ul(class="nav secondary-nav" data-dropdown="dropdown")
            %li.dropdown
              %a(href='#' class='dropdown-toggle')Commands
              %ul.dropdown-menu
                %li
                  %a(href="#" id = 'speed') Set Speed
                %li
                  %a(href = "#" id = 'pause') Pause
                %li
                  %a(href = "#" id = 'play' style = 'display: none;') Play
            %li
              %a(href = "/logout") Logout

    .container-fluid
      = yield


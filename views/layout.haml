!!! 5
%html(lang="en")
  %head
    %title= MrDashboard.settings['title']
    %script{:src => '/javascript/jquery-1.7.min.js'}
    %script{:src => '/javascript/bootstrap-dropdown.js'}
    %script{:src => '/javascript/Queue.js'}
    %script{:src => 'application.js'}
    %link{:href => 'stylesheets/bootstrap.min.css', :rel => 'stylesheet', :type => "text/css"}
    %link{:href => 'application.css', :rel => 'stylesheet', :type => "text/css"}

  %body
    .topbar
      .fill
        .container
          %h3
            %a(href="#")=MrDashboard.settings["title"]
          %ul(class="nav secondary-nav" data-dropdown="dropdown")
            %li
              %a(href="#" id = 'speed') Speed
            %li
              %a(href = "#" id = 'pause') Pause
            %li
              %a(href = "#" id = 'play' style = 'display: none;') Play
            %li
              %a(href="#" id = 'next') Next
            %li.dropdown
              %a(href='#' class='dropdown-toggle')Sites
              %ul.dropdown-menu.sites_ul
                %li.divider
                %li
                  %a(href = "/logout") Logout

    .container-fluid
      = yield

